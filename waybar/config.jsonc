{
    "layer": "top",
    "position": "top",
    "height": 34,
    "spacing": 4,
    "exclusive": true,
    "passthrough": false,
    "fixed-center": true,

    // Define quais m√≥dulos aparecem em cada posi√ß√£o
    "modules-left": ["custom/launcher","hyprland/workspaces", "hyprland/mode"],
    "modules-center": ["hyprland/window"],
    "modules-right": ["pulseaudio", "pulseaudio#microphone", "network", "cpu", "memory", "clock", "tray"],
    "custom/launcher": {
        "format": "ÔåÉ", // √çcone do Arch nas Nerd Fonts
        "on-click": "wofi --show drun --style ~/.config/wofi/style.css --conf ~/.config/wofi/config",
        "on-click-right": "killall waybar && waybar &", // Reinicia a barra com clique direito
        "tooltip": false
    },

    // Configura√ß√£o detalhada do Workspaces (Otimizada para 2 monitores)
    "hyprland/workspaces": {
        "all-outputs": false, // Mostra apenas os workspaces do monitor atual
        "active-only": false,
        "on-click": "activate",
        "disable-scroll": true,
        "format": "{name} {icon}",
        "on-scroll-up": "hyprctl dispatch workspace e+1",
        "on-scroll-down": "hyprctl dispatch workspace e-1",
        "format-icons": {
            "1": "Ôâ©",
            "2": "Óûï",
            "3": "  ",
            "4": "ÔÜº",
            "5": "ÔÅµ",
            "urgent": "ÔÅ™",
            "focused": "ÔÜí",
            "default": "ÔÑå"
        },
        "persistent-workspaces": {
             "*": 3 // Mant√©m workspaces 1, 2 e 3 sempre vis√≠veis
        }
    },

    "hyprland/window": {
        "format": "{title}",
        "separate-outputs": true, // T√≠tulo da janela s√≥ aparece no monitor onde ela est√°
        "rewrite": {
            "(.*) ‚Äî Mozilla Firefox": "üåé $1",
            "(.*) - fish": "üêö $1",
             "(.*) - kitty": "Óûï $1"
        },
        "max-length": 40
    },
  
"pulseaudio": {
    "format": "{icon} {volume}%",
       "format-muted": "Û∞ùü",
        "format-icons": {
        "headphone": "ÔÄ•",
        "handsfree": "Ôñê",
        "headset": "Ôñê",
        "phone": "ÔÇï",
        "portable": "ÔÇï",
        "car": "ÔÜπ",
        "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
    },
    "on-click": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
    "on-click-right": "pavucontrol"
},

"pulseaudio#microphone": {
    "format": "{format_source}",
    "format-source": "ÔÑ∞ {volume}%",
    "format-source-muted": "ÔÑ± Mudo",
    "on-click": "pactl set-source-mute @DEFAULT_SOURCE@ toggle",
    "on-click-right": "pavucontrol",
    "on-scroll-up": "pactl set-source-volume @DEFAULT_SOURCE@ +5%",
    "on-scroll-down": "pactl set-source-volume @DEFAULT_SOURCE@ -5%"
},  
    "network": {
    "interface": "wlan0",
    "format-wifi": "{icon} {signalStrength}%",
    "format-icons": ["Û∞§Ø", "Û∞§ü", "Û∞§¢", "Û∞§•", "Û∞§®"],
    "format-ethernet": "  ",
    "format-disconnected": "Û∞§≠  Disconectado",
    "tooltip-format": "{essid} via {gwaddr} Ôá´",
    "interval": 5
},  

    "cpu": {
        "format": "Ôíº  {usage}%",
        "tooltip": false
    },

    "memory": {
        "format": "Óâ¶  {}%"
    },
   "clock": {
        "format": "Ôê∫  {:%H:%M}",
        "format-alt": "    {:%A, %d de %B}",
        "tooltip-format": "<tt><small>{calendar}</small></tt>"
    },
   "tray": {
        "icon-size": 18,
        "spacing": 10
    }
}

